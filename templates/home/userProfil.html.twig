{% extends 'base.html.twig' %}

{% block meta_title %}
    Votre profil
{% endblock %}

{% block body %}
    <div class="relative lg:hidden h-[calc(70vh-64px)] w-full z-0">
        <img src="{{ asset('img/out.jpg') }}" alt="Description de l'image"
             class="h-[70vh] w-screen object-cover object-[50%]-[40%] lg:object-[10%_70%] fixed top-0 left-0 z-0">
    </div>


    <section class=" w-full bg-red-50 relative border-y-[1.5px] border-black z-20">

        <div class="flex flex-col items-center min-h-[30vh] justify-center">
            <svg class="w-100 h-12">
                <defs>
                    <!-- Chemin avec une hauteur ajustée -->
                    <path id="curve" d="M 20, 60 A 150, 50 0 0, 1 280, 60" />
                </defs>
                <text width="500">
                    <!-- Décalage vertical avec dy -->
                    <textPath
                            href="#curve"
                            startOffset="50%"
                            text-anchor="middle"
                            fill="#431407"
                            class="text-lg italic font-lato"
                            dy="0.25em"
                    >
                        Extension de cils
                    </textPath>
                </text>
            </svg>

            <h1 class="text-4xl font-regitha tracking-wide text-orange-950 mb-6 mt-3">
                Votre profil
            </h1>
            <h2 class="text-lg font-lato tracking-wide text-orange-950 italic">
                Beauty by M.
            </h2>
        </div>
    </section>
    <div class="lg:max-w-4xl w-full mx-auto px-6 py-16 bg-white shadow-2xl relative">

        <!-- Messages de succès -->
        {% for message in app.flashes('success') %}
            <div class="bg-[#e0f3e0] border-l-4 border-[#94c39e] rounded-lg shadow-lg p-4 mb-6 text-[#5d7f64]">
                {{ message }}
            </div>
        {% endfor %}

        <!-- Formulaire -->
        {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}

        <!-- Prénom -->
        <div class="flex flex-col">
            <label for="firstName" class="text-lg font-semibold text-gray-700 mb-2">Prénom</label>
            {{ form_widget(form.firstName, {
                'attr': {
                    'class': 'w-full py-3 px-4 bg-gray-50 text-gray-700 font-semibold border rounded-md border-black focus:border-green-600 focus:outline-none focus:ring-2 focus:ring-[#94c39e] shadow',
                }
            }) }}
            {{ form_errors(form.firstName) }}
        </div>

        <!-- Nom -->
        <div class="flex flex-col">
            <label for="lastName" class="text-lg font-semibold text-gray-700 mb-2">Nom</label>
            {{ form_widget(form.lastName, {
                'attr': {
                    'class': 'w-full py-3 px-4 bg-gray-50 text-gray-700 font-semibold border rounded-md border-black focus:border-green-600 focus:outline-none focus:ring-2 focus:ring-[#94c39e] shadow',
                }
            }) }}
            {{ form_errors(form.lastName) }}
        </div>

        <!-- Email -->
        <div class="flex flex-col">
            <label for="email" class="text-lg font-semibold text-gray-700 mb-2">Email</label>
            {{ form_widget(form.email, {
                'attr': {
                    'class': 'w-full py-3 px-4 bg-gray-50 text-gray-700 font-semibold border rounded-md border-black focus:border-green-600 focus:outline-none focus:ring-2 focus:ring-[#94c39e] shadow',
                }
            }) }}
            {{ form_errors(form.email) }}
        </div>

        <!-- Bouton de soumission -->
        <div class="flex justify-end">
            <button type="submit"
                    class="flex items-center justify-center shadow text-[#5d7f64] font-medium py-2 rounded-md bg-[#e0f3e0] transition px-3 border-2 border-transparent hover:border-black gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                Mettre à jour
            </button>
        </div>

        {{ form_end(form) }}
    </div>
    <style>
        body {
            background-color: white!important;
        }
    </style>
{% endblock %}
