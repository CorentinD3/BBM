<div style="max-width: 500px; margin: 50px auto; padding: 20px;
            background-color: #f2f2f2; border-radius: 8px;
            text-align: center; font-family: sans-serif;">
    <h1 style="font-size: 1.5rem; margin-bottom: 15px;">
        Êtes-vous sûr de vouloir annuler votre rendez-vous ?
    </h1>
    <p style="font-size: 1rem; color: #333; margin-bottom: 20px;">
        Prestation : {{ hour.prestation.label }}<br>
        Date/Heure : {{ hour.date.date|date('d/m/Y') }} à {{ hour.hour|date('H:i') }}
    </p>

    <!-- Conteneur pour les deux boutons -->
    <div style="display: flex; justify-content: center; gap: 10px;">
        <!-- Bouton "Oui, annuler" -->
        <a href="{{ url('app_cancel_appointment_offline', { token: token }) }}"
           style="display: inline-block; padding: 10px 16px;
                  background-color: #d9534f; color: #fff;
                  text-decoration: none; font-weight: bold;
                  border-radius: 5px;">
            Oui, annuler
        </a>
        <!-- Bouton "Non, revenir" -->
        <a href="{{ path('app_home') }}"
           style="display: inline-block; padding: 10px 16px;
                  background-color: #6c757d; color: #fff;
                  text-decoration: none; font-weight: bold;
                  border-radius: 5px;">
            Non, revenir
        </a>
    </div>
</div>
