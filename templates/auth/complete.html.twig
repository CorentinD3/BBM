{% extends 'base.html.twig' %}
{% block meta_title %}
    Profil
{% endblock %}
{% block body %}
    <div class="lg:max-w-4xl w-full mx-auto px-6 py-16 bg-white shadow-2xl">
        <!-- En-tête de la section -->
        <div class="flex lg:items-center items-start border-b border-black pb-4 mb-6">
            <h1 class="text-3xl font-bold tracking-wide mb-4">Renseignez vos informations personnelles</h1>
        </div>

        <!-- Messages de succès -->
        {% for message in app.flashes('success') %}
            <div class="bg-[#e0f3e0] border-l-4 border-[#94c39e] rounded-lg shadow-lg p-4 mb-6 text-[#5d7f64]">
                {{ message }}
            </div>
        {% endfor %}

        <!-- Formulaire -->
        {{ form_start(userProfileForm, { 'attr': { 'class': 'space-y-6' } }) }}

        <!-- Prénom -->
        <div class="flex flex-col">
            <label for="firstName" class="text-lg font-semibold text-gray-700 mb-2">Prénom</label>
            {{ form_widget(userProfileForm.firstName, {
                'attr': {
                    'class': 'w-full py-3 px-4 bg-gray-50 text-gray-700 font-semibold border rounded-md border-black focus:border-green-600 focus:outline-none focus:ring-2 focus:ring-[#94c39e] shadow',
                }
            }) }}
            {{ form_errors(userProfileForm.firstName) }}
        </div>

        <!-- Nom -->
        <div class="flex flex-col">
            <label for="lastName" class="text-lg font-semibold text-gray-700 mb-2">Nom</label>
            {{ form_widget(userProfileForm.lastName, {
                'attr': {
                    'class': 'w-full py-3 px-4 bg-gray-50 text-gray-700 font-semibold border rounded-md border-black focus:border-green-600 focus:outline-none focus:ring-2 focus:ring-[#94c39e] shadow',
                }
            }) }}
            {{ form_errors(userProfileForm.lastName) }}
        </div>

        <!-- Email -->
        <div class="flex flex-col">
            <label for="email" class="text-lg font-semibold text-gray-700 mb-2">Email</label>
            {{ form_widget(userProfileForm.email, {
                'attr': {
                    'class': 'w-full py-3 px-4 bg-gray-50 text-gray-700 font-semibold border rounded-md border-black focus:border-green-600 focus:outline-none focus:ring-2 focus:ring-[#94c39e] shadow',
                }
            }) }}
            {{ form_errors(userProfileForm.email) }}
        </div>

        <!-- Bouton de soumission -->
        <div class="flex justify-end">
            <button type="submit"
                    class="flex items-center justify-center shadow text-[#5d7f64] font-medium py-2 rounded-md bg-[#e0f3e0] transition px-3 border-2 border-transparent hover:border-black gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                Valider
            </button>
        </div>

        {{ form_end(userProfileForm) }}
    </div>
    <style>
        body {
            background-color: white!important;
        }
    </style>
{% endblock %}